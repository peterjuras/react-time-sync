{
  "name": "react-time-sync",
  "version": "4.3.0",
  "description": "A React library to synchronize timers across an application",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:peterjuras/react-time-sync.git",
  "author": "Peter Juras <me@peterjuras.com>",
  "scripts": {
    "ts": "tsc -p tsconfig.build.json && tsc --declaration --emitDeclarationOnly -p tsconfig.build.json",
    "build": "rm -rf build && yarn run ts && cp -R scripts .npmignore LICENSE package.json README.md build",
    "prepublishOnly": "node ./scripts/ensure-publish-path",
    "lint": "eslint '{scripts,src,test}/**/*.{ts,tsx,js}'",
    "test": "jest --config .jest.js",
    "test-ci": "jest --ci --runInBand --config .jest.ci.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/lolex": "^2.1.3",
    "@types/react": "^16.8.3",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.1.0",
    "jest-junit": "^6.3.0",
    "lolex": "^3.1.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-testing-library": "^5.8.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "time-sync": "^2.2.0"
  }
}
